<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <size android:width="68dp" android:height="68dp"/>
            <solid android:color="#00FFFFFF"/>
            <stroke android:width="3dp" android:color="@android:color/black" />
            <corners android:radius="60dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <size android:width="43dp" android:height="43dp"/>
            <solid android:color="#00FFFFFF"/>
            <stroke  android:width="0dp" android:color="@color/colorPrimary"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>
</selector>